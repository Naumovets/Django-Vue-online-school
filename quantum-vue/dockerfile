# Используйте базовый образ Node.js
FROM node:latest

# Установите рабочую директорию внутри контейнера
WORKDIR /app

# Скопируйте все файлы проекта в контейнер
COPY . .

# Установите зависимости
RUN npm install

# Соберите приложение Vue.js
RUN npm run build

# Установите глобально serve для запуска приложения
RUN npm install -g serve

# Установите команду запуска приложения
CMD ["serve", "-s", "dist", "-l", "8080"]
